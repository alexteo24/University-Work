<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/rounded_corners"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/playlist_title"
        android:layout_width="193dp"
        android:layout_height="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/createdBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/playlist_title"
        app:layout_constraintTop_toBottomOf="@+id/playlist_title"
        app:layout_constraintVertical_bias="0.437" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/playlist_title"
        app:layout_constraintTop_toBottomOf="@+id/playlist_title"
        app:layout_constraintVertical_bias="0.454" />

    <TextView
        android:id="@+id/createdByLabel"
        android:layout_width="53dp"
        android:layout_height="11dp"
        android:layout_marginBottom="4dp"
        android:text="createdBy"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/createdBy"
        app:layout_constraintStart_toStartOf="@+id/createdBy" />

    <TextView
        android:id="@+id/playlistDurationLabel"
        android:layout_width="53dp"
        android:layout_height="11dp"
        android:layout_marginBottom="4dp"
        android:text="duration"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/duration"
        app:layout_constraintEnd_toEndOf="@+id/duration" />

</androidx.constraintlayout.widget.ConstraintLayout>